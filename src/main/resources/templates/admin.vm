							#if(!$key)#set($hideRow = "hide")#else#set($hideRow = "")#end
							<tr class="api-key-row ${hideRow}">
								<td>
									<a href="$adminlink/revoke-api-key?jti=$!key" class="api-key-revoke red-text right">
										<i class="fa fa-times"></i> Revoke
